<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_page"
    android:background="@color/backgroundBlue"
    tools:context="com.example.david.nhsappointment.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:src="@drawable/nhslogo" />

    <TextView
        android:id="@+id/splash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logo"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Book, cancel and change appointments on the go."
        android:textColor="@color/textWhite"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="337dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/homebutton"
        android:text="@string/home_button"
        android:id="@+id/home_button"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile"
        android:id="@+id/profile_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:src="@drawable/bookappointment"
        android:id="@+id/book_button"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:src="@drawable/cancelappointment"
        android:id="@+id/cancel_button"
        android:layout_alignTop="@+id/book_button"
        android:layout_alignLeft="@+id/help_button"
        android:layout_alignStart="@+id/help_button" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:src="@drawable/changeappointment"
        android:id="@+id/change_button"
        android:layout_alignBottom="@+id/local_button"
        android:layout_alignLeft="@+id/cancel_button"
        android:layout_alignStart="@+id/cancel_button" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:src="@drawable/localsurgeries"
        android:id="@+id/local_button"
        android:layout_below="@+id/book_button"
        android:layout_alignRight="@+id/book_button"
        android:layout_alignEnd="@+id/book_button"
        android:layout_marginTop="16dp" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:src="@drawable/symptomchecker"
        android:id="@+id/symptoms_button"
        android:layout_alignBaseline="@+id/help_button"
        android:layout_alignBottom="@+id/help_button"
        android:layout_alignRight="@+id/local_button"
        android:layout_alignEnd="@+id/local_button" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:src="@drawable/help"
        android:id="@+id/help_button"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/change_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
