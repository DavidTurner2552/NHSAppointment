<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/help_page"
    android:background="@color/backgroundBlue"
    tools:context="com.example.david.nhsappointment.HelpActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:src="@drawable/nhslogo" />


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="FAQs"
        android:textColor="@color/textWhite"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="337dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/homebutton"
        android:text="@string/home_button"
        android:id="@+id/home_button"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile"
        android:id="@+id/profile_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text"
        android:layout_centerHorizontal="true"
        android:text="@string/help_text"
        android:textColor="@color/textWhite" />

    <Button
        android:id="@+id/question_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/answer"
        android:background="@color/backgroundBlue"
        android:text="@string/question_1"
        android:textColor="@color/textWhite" />

    <Button
        android:id="@+id/question_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_1"
        android:layout_marginTop="15dp"
        android:layout_toStartOf="@+id/answer"
        android:background="@color/backgroundBlue"
        android:text="@string/question_2"
        android:textColor="@color/textWhite" />

    <Button
        android:id="@+id/question_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_4"
        android:layout_marginTop="11dp"
        android:layout_toStartOf="@+id/answer"
        android:background="@color/backgroundBlue"
        android:text="@string/question_3"
        android:textColor="@color/textWhite" />

    <Button
        android:id="@+id/question_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_2"
        android:layout_marginTop="17dp"
        android:layout_toStartOf="@+id/answer"
        android:background="@color/backgroundBlue"
        android:text="@string/question_4"
        android:textColor="@color/textWhite" />

    <Button
        android:id="@+id/question_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/answer"
        android:layout_toStartOf="@+id/answer"
        android:background="@color/backgroundBlue"
        android:text="@string/question_5"
        android:textColor="@color/textWhite" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="180sp"
        android:layout_height="280sp"
        android:layout_alignBaseline="@+id/question_1"
        android:layout_alignBottom="@+id/question_1"
        android:layout_alignParentEnd="true"
        android:text=""
        android:textColor="@color/textWhite" />

</RelativeLayout>
