<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    tools:context="com.example.david.nhsappointment.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:src="@drawable/nhslogo" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Please Login"
        android:textColor="@color/textWhite"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="337dp" />

    <TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cusUsername"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Use you email as your username and your D.o.B as your password."
        android:textColor="@color/textWhite"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="337dp" />

    <TextView
        android:id="@+id/defUsername"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_text"
        android:layout_marginTop="81dp"
        android:text="Username"
        android:textColor="@color/textWhite"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/defPassword"
        app:layout_constraintEnd_toEndOf="@+id/defPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/defPassword"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/defUsername"
        android:layout_marginTop="14dp"
        android:text="Password"
        android:textColor="@color/textWhite"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defUsername" />

    <EditText
        android:id="@+id/cusUsername"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/logo"
        android:layout_alignTop="@+id/defUsername"
        android:textColor="@color/textWhite"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/cusPassword"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/cusUsername"
        android:layout_alignTop="@+id/defPassword"
        android:inputType="textPassword"
        android:textColor="@color/textWhite"
        android:textSize="24sp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cusPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Login" />

</RelativeLayout>

