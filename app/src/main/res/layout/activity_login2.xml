<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    tools:context="com.example.david.nhsappointment.LoginActivity">

    <TextView
        android:id="@+id/add_image"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="NHS logo"
        android:textColor="@color/textWhite"
        android:textSize="36sp" />

    <TextView
    android:id="@+id/splash_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/add_image"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="402dp"
    android:gravity="center"
    android:text="Login page"
    android:textColor="@color/textWhite"
    android:textSize="24sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/add_image" />

    <TextView
        android:id="@+id/defUsername"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="144dp"
        android:text="Username"
        android:textColor="@color/textWhite"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/defPassword"
        app:layout_constraintEnd_toEndOf="@+id/defPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/defPassword"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/defUsername"
        android:layout_toStartOf="@+id/add_image"
        android:text="Password"
        android:textColor="@color/textWhite"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defUsername" />

    <EditText
        android:id="@+id/cusUsername"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/add_image"
        android:layout_alignTop="@+id/defUsername"
        android:textColor="@color/textWhite"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/cusPassword"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/cusUsername"
        android:layout_below="@+id/defUsername"
        android:textColor="@color/textWhite"
        android:textSize="24sp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cusPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Login" />

</RelativeLayout>

